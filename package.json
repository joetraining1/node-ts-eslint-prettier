{
  "name": "ts-eslint-prettier",
  "imports": {
    "#*": "./src/*"
  },
  "version": "1.0.0",
  "description": "Node Ts Express API Webservice secured development using ESLint",
  "scripts": {
    "launch": "nodemon dist/src/index.js",
    "build": "npx tsc",
    "stack-dev": "npx tsc --noEmit && npx tsx --watch src/index.ts",
    "dev": "tsx --watch --env-file .env src/index.ts",
    "dev:staging": "tsx --watch --env-file .env.staging src/index.ts",
    "dev:production": "tsx --watch --env-file .env.production src/index.ts",
    "type-check": "npx tsc --noEmit",
    "observe": "npx tsx --watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joetraining1/node-ts-eslint-prettier.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/joetraining1/node-ts-eslint-prettier/issues"
  },
  "homepage": "https://github.com/joetraining1/node-ts-eslint-prettier#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mysql2": "^3.14.3",
    "nodemon": "^3.1.10",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tsconfig/node23": "^23.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.32.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
